#!/bin/bash

# Git pre-push hook
# ãƒ—ãƒƒã‚·ãƒ¥å‰ã«ã‚ˆã‚Šå³å¯†ãªãƒã‚§ãƒƒã‚¯ã‚’å®Ÿè¡Œã—ã¾ã™

set -e

# ã‚«ãƒ©ãƒ¼å‡ºåŠ›ç”¨ã®è¨­å®š
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}Running pre-push checks...${NC}"

# 1. ã™ã¹ã¦ã®ãƒ†ã‚¹ãƒˆã‚’å®Ÿè¡Œï¼ˆFORCE_COLOR=1ã§ï¼‰
echo -e "\n${YELLOW}Running all tests...${NC}"
TEST_OUTPUT=$(FORCE_COLOR=1 bun test 2>&1)
if echo "$TEST_OUTPUT" | grep -q "fail"; then
    echo -e "${RED}âœ— Tests failed${NC}"
    echo "$TEST_OUTPUT" | grep -E "(fail|error)" | head -10
    exit 1
fi
PASS_COUNT=$(echo "$TEST_OUTPUT" | grep -oE "[0-9]+ pass" | grep -oE "[0-9]+" | head -1)
echo -e "${GREEN}âœ“ All tests passed ($PASS_COUNT tests)${NC}"

# 2. ãƒ“ãƒ«ãƒ‰ãƒã‚§ãƒƒã‚¯
echo -e "\n${YELLOW}Building project...${NC}"
if ! bun run build > /dev/null 2>&1; then
    echo -e "${RED}âœ— Build failed${NC}"
    exit 1
fi
echo -e "${GREEN}âœ“ Build succeeded${NC}"

# 3. ãƒ‡ã‚£ã‚¹ãƒˆãƒªãƒ“ãƒ¥ãƒ¼ã‚·ãƒ§ãƒ³ãƒ•ã‚¡ã‚¤ãƒ«ã®å­˜åœ¨ç¢ºèª
echo -e "\n${YELLOW}Checking distribution files...${NC}"
if [ ! -f "dist/colorize.js" ]; then
    echo -e "${RED}âœ— Distribution file not found${NC}"
    echo "Please run: bun run build"
    exit 1
fi
echo -e "${GREEN}âœ“ Distribution files exist${NC}"

# 4. package.jsonã®ãƒãƒ¼ã‚¸ãƒ§ãƒ³ãƒã‚§ãƒƒã‚¯
echo -e "\n${YELLOW}Checking package version...${NC}"
PACKAGE_VERSION=$(grep '"version"' package.json | sed -E 's/.*"version": "(.+)".*/\1/')
LAST_TAG=$(git describe --tags --abbrev=0 2>/dev/null || echo "0.0.0")
echo "Current version: $PACKAGE_VERSION"
echo "Last git tag: $LAST_TAG"

# 5. READMEã®åŒæœŸç¢ºèª
echo -e "\n${YELLOW}Checking README synchronization...${NC}"
if [ -f "scripts/sync-readme.sh" ]; then
    if ! bash scripts/sync-readme.sh; then
        echo -e "${RED}âœ— README files are not in sync${NC}"
        exit 1
    fi
fi

echo -e "\n${GREEN}All pre-push checks passed! ğŸš€${NC}"
echo -e "${BLUE}Ready to push to remote repository${NC}"